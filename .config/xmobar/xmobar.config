Config { 
	-- apperance
	font = "xft:FiraCode Nerd Font:weight=regular:pixelsize=14:antialias=true"
       , additionalFonts = ["xft:Mononoki Nerd Font:weight=bold:pixelsize=16:antialias=true"]
       , borderColor = "black"
       , border = TopB
       , bgColor = "#282828"
       , fgColor = "grey"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = True
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [
		Run Weather "ENTO"
			["-t","<station>: <tempC>C",
                        "-L","18","-H","25",
                        "--normal","green",
                        "--high","red",
                        "--low","lightblue"] 36000
                , Run Network "wlo1"
			["-t","wifi: <fn=1>\xf0aa </fn><rx>kb  <fn=1>\xf0ab </fn><tx>kb"] 10
                , Run Network "eth0"
			["-t","lan: <fn=1>\xf0aa </fn><rx>kb  <fn=1>\xf0ab </fn><tx>kb",
			"-L","10","-H","2048",
                        "--normal","green","--high","red"] 10
                , Run Cpu
			["-t", " <fc=#add8e6><fn=0>\xf108 </fn></fc>: <total>%",
			"-L","3","-H","75",
                        "--normal","green","--high","red"] 10
                , Run Memory
			["-t","<fn=1>\xf85a </fn>: <usedratio>%",
			"-L","10","-H","60",
			"--normal","green","--high","red"] 10
                , Run Swap [] 10
                , Run Com "uname" ["-r"] "" 36000
                , Run Date "%_d.%m.%Y %H:%M" "date" 100
		, Run StdinReader
                ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }\
                    \{%wlo1% <fc=#666666>|</fc> %cpu% <fc=#666666>|</fc> %memory% <fc=#666666>|</fc> <fc=#ee9a00>%date%</fc> <fc=#666666>|</fc> <fn=1>ïŒ’ </fn> %uname% "
}
